                   Margin="10"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Grid.Row="0" 
                   Grid.Column="1"/>

        <TextBlock Text="M 1" 
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   FontSize="30"
                   Margin="10"
