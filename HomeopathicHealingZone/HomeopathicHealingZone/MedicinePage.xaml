                   FontSize="30" 
                   Margin="10"
                   Height="50"
                   HorizontalAlignment="Center"
                   Grid.Row="5" 
                   Grid.Column="1"/>

        <HyperlinkButton  Name="Appointment"
                          FontSize="20"
                          Foreground="White"
                          FontWeight="SemiBold"
                          Content="Appointment"
                          HorizontalAlignment="Center"
                          Click="Appointment_Click"
                          Grid.Row="7" 
                          Grid.Column="0"/>
        <HyperlinkButton Name="Home"
                         Content="Home"
                         FontSize="20"
                         Foreground="White"
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"
                         Click="Home_Click"
                         Grid.Row="7" 
                         Grid.Column="1"/>

